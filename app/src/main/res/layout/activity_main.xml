<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Frequency"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/frequencyRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <RadioButton
                android:id="@+id/RB11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T1"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/RB12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2"/>
            <RadioButton
                android:id="@+id/RB13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T3"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ear"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/earRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <RadioButton
                android:id="@+id/RB21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/RB22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"/>
            <RadioButton
                android:id="@+id/RB23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/SoundET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" android:hint=" Enter Sound"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/volumeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" android:hint=" Enter Volume"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/SessionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" android:hint=" Enter Session"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mode"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/modeRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <RadioButton
                android:id="@+id/RB31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnosis"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/RB32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Therapy"/>
        </RadioGroup>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/TimerET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" android:hint=" Enter Timer"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/patientIDET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=" Enter Patient ID"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/connectBT"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Update device"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_1_circle_bg"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"

        />
</LinearLayout>

</ScrollView>